{
    "name": "checkpoint_config",
    "n_gpu": 0,
    "preprocessing": {
    "sr": 16000,
    "spectrogram": {
        "type": "MelSpectrogram",
        "args": {}
    }
    },
        "augmentations": {
        "wave": [],
        "spectrogram": []
    },
        "arch": {
            "type": "CheckpointModel",
            "args": {
                "n_feats": 128,
                "fc_hidden": 256,
                "rnn_hidden": 128,
                "num_layers": 3,
                "bidirectional": true
            }
    },
    "data": {
        "train": {
            "batch_size": 20,
            "num_workers": 8,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-clean",
                        "max_audio_length": 20.0,
                        "max_text_length": 200,
                        "limit": 20
                    }
                }
            ]
        },
        "val": {
            "batch_size": 20,
            "num_workers": 8,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-clean",
                        "max_audio_length": 20.0,
                        "max_text_length": 200,
                        "limit": 20
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {}
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)"
            }
        }
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100, 
            "gamma": 0.9
        }
    },
    "trainer": {
        "epochs": 3000,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 0,
        "monitor": "off",
        "visualize": "wandb",
        "wandb_project": "asr_project",
        "grad_norm_clip": 50
  }
}
