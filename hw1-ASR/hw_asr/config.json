{
    "name": "transformer_config",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {}
        }
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "TransformerModel",
        "args": {
            "n_feats": 128,
            "fc_hidden": 256,
            "tr_hidden": 512,
            "n_layers": 5,
            "n_head": 5,
            "dropout": 0.25
        }
    },
    "data": {
        "train": {
            "batch_sampler": {
                "type": "GroupLengthBatchSampler",
                "args": {
                    "batch_size": 40,
                    "group_size": 800
                } 
            },
            "num_workers": 4,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-clean",
                        "max_audio_length": 20.0,
                        "max_text_length": 200,
                        "limit": 20
                    }
                }
            ]
        },
        "val": {
            "batch_size": 40,
            "num_workers": 4,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-clean",
                        "max_audio_length": 20.0,
                        "max_text_length": 200
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.005
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {}
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)",
                "split": "train"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)",
                "split": "train"
            }
        },
        {
            "type": "BeamSearchWERMetric",
            "args": {
                "name": "WER (beam_search)",
                "split": "val"
            }
        },
        {
            "type": "BeamSearchCERMetric",
            "args": {
                "name": "CER (beam_search)",
                "split": "val"
            }
        }
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 1000,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 0,
        "monitor": "off",
        "visualize": "wandb",
        "wandb_project": "asr_project"
  }
}
